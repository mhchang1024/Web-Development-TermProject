
<div id = 'registrationBack'>
    <div class="container">
       
        <form id="registration" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
           
            <p><b> Registration Form</b></p>
            <label id="lblusername" class="tags reg-lbl-uname" for="username" >Username: </label>
            <input type="text" class="text-input reg-input-uname" id="name" placeholder="name" name="username" />
            <br>
            <label id="lblemail" class="tags reg-lbl-email" for="email">Email: </label>

            <input type="email" id="email" class="text-input reg-input-email" placeholder="Enter Email" name="email" />
        
            <br>
            <label for="password">Password: </label>
            <input type="password" placeholder="Enter Password" id="password" name="password" >
            
            <label for="repassword">Comfirm Password: </label>
            <input type="password" placeholder="ReEnter Password" id="rePassword" name="repassword" >
        
            <br>
            <span>Are you over 13+ years old? </span>
            <input type="checkbox" id="checkboxy" name="checkboxy" value="Yes" required>
        
       
            <br>
            <a href="#"> TOS and Privacy Rules </a>
            <input type="checkbox" id="checkbox" name="checkbox" value="Comfirm" required>
           
            <br>
            <button type="submit" id="reg-button">  Submit</button>
            
        </form>
    </div>
    <footer>

    </footer>
</div>