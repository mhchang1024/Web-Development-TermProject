<!DOCTYPE html>
<html>
 <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="/public/css/layout.css">
    <link rel="stylesheet" type="text/css" href="/public/css/index.css">
    <link rel="stylesheet" type="text/css" href="/public/css/registration.css">
    <link rel="stylesheet" type="text/css" href="/public/css/postimage.css">
    <link rel="stylesheet" type="text/css" href="/public/css/viewpost.css">
    <link rel="stylesheet" type="text/css" href="/public/css/login.css">
    <link rel="stylesheet" type="text/css" href="/public/css/home.css">
    <script defer src="/public/js/frontendjs.js"></script>
</head>
  <body>
    <div>
      {{log this}}
      {{> banner}}
      {{> nav}}
      {{#if (emptyObject messages)}}
      {{> flashmessages}}
      {{/if}}
      {{{body}}}
      {{> footer}}
    </div>

    {{#if logged}}
      <script>
        let ele = document.getElementById('logout-button');
        
        if(ele){
          ele.onclick = (even) =>{
            fetch('/users/logout', {
              method:"POST"
            })
            .then((data) =>{
              location.replace('/');
            })
          }
        }

      </script>

    {{/if}}

  </body>
</html>
